<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block name="custom.template" template="Magento_Wishlist::custom-template.phtml"/>
        </referenceContainer>

        <referenceBlock name="customer.wishlist.button.update" remove="true"/>

        <move element="customer.wishlist.button.share" destination="customer.wishlist.buttons" before="customer.wishlist.button.toCart"/>
    </body>
</page>
